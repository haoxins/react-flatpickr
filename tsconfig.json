{
  "compilerOptions": {
    "baseUrl": "./lib",
    "rootDir": "./lib",
    "target": "es2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "build",
    "types": ["vite/client", "node", "react"]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "*.json"]
}
